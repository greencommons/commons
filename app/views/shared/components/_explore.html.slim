
- unless suggestions.blank?
  hr
  .row.page-details__row--half
    .col-xs-12
      h6= defined?(title) ? title : 'Explore'
  
  - suggestions.each_slice(2) do |slice|
    .row
      - slice.each do |suggestion|
        .col-xs-12.col-md-6
          = render 'shared/summary_cards/main', resource: suggestion
