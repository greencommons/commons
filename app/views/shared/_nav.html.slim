nav.navbar.navbar-inverse
  .container
    .navbar-header
      button.navbar-toggle.collapsed data-target='#navbar-collapse' data-toggle='collapse' type='button'
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand href='/'  Green Commons
    #navbar-collapse.collapse.navbar-collapse
      - if user_signed_in?
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle aria-expanded='false' data-toggle='dropdown' href='#' role='button'
              span.glyphicon.glyphicon-plus aria-hidden='true'
              span.caret
            ul.dropdown-menu role='menu'
              li= link_to('Create Group', new_group_path)
          li.dropdown
            a.dropdown-toggle aria-expanded='false' data-toggle='dropdown' href='#' role='button'
              = current_user.email
              span.caret
            ul.dropdown-menu role='menu'
              /! <li><a href='#'>Profile</a></li
              li= link_to('Logout', destroy_user_session_path)
      - else
        form.navbar-form.navbar-right
          = link_to 'Sign Up', new_user_registration_path, class: 'btn btn-default'
        ul.nav.navbar-nav.navbar-right
          li= link_to 'Sign In', new_user_session_path
